+std::vector<unsigned char> Address::decryptBucket(const std::string bucket) {
+    ECIES<ECP>::PrivateKey decodedPrivateKey;
+    decodedPrivateKey.Load(StringStore(this->getEncryptionSecretKey()).Ref());
+    AutoSeededRandomPool prng;
+    ECIES<ECP>::Decryptor decrypt(decodedPrivateKey);
+
+    //byte ciphertext_internals[v_size + zc_r_size + rho_size];
+    std::vector<byte> bucket_bytes(bucket.begin(), bucket.end());
+    std::vector<unsigned char> ciphertext_internals(decrypt.MaxPlaintextLength(bucket_bytes.size() + 1));
+    std::fill(ciphertext_internals.begin(), ciphertext_internals.end(), 0);
+
+    decrypt.Decrypt(prng, &bucket_bytes[0], bucket_bytes.size(), &ciphertext_internals[0]);
+
+    return ciphertext_internals;
+}
